import { PureComponent } from 'react';
import ImagePicker
  from 'react-native-image-crop-picker';

class PhotoPicker extends PureComponent {
  constructor(props) {
    super(props);
  }
  async openPicker() {
    const img =
      await ImagePicker.openPicker({});
    await this.props.onImageChosen(img);
  }
  render() {
    return null;
  }
}

export default PhotoPicker;
